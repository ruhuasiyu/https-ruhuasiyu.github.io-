\mode<presentation>

\setbeamertemplate{page number in head/foot}[totalframenumber]%

\defbeamertemplate*{footline}{hfut theme}
{%
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{chapter in head/foot}%
    \ifnum \thepart>0
      \usebeamerfont{title in head/foot}{第\zhnumber{\thepart}章\hspace{1em}\insertshortpart}
    \else
      \usebeamerfont{author in head/foot}{\insertshortauthor}
    \fi
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{course in head/foot}%
    \usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,leftskip=2ex,rightskip=2ex,sep=0pt]{title in head/foot}%
    \ifnum \thesection>0
      \hfill%
      \usebeamerfont{section in head/foot}{\thepart.\thesection~\insertsectionhead{}}
      \hfill%
      \usebeamercolor[fg]{page number in head/foot}\usebeamerfont{page number in head/foot}\usebeamertemplate{page number in head/foot}      
    \else
      \ifnum \thepart>0
        \hfill%
        \usebeamerfont{institute in head/foot}{\insertshortinstitute}
        \hfill%
        \usebeamercolor[fg]{page number in head/foot}\usebeamerfont{page number in head/foot}\usebeamertemplate{page number in head/foot}      
      \else
        \centering \usebeamerfont{author in head/foot}{\insertshortinstitute}
      \fi
    \fi
  \end{beamercolorbox}}%
  \vskip0pt%
}

\setbeamertemplate{navigation symbols}{} % 去掉导航栏

\mode<all>
