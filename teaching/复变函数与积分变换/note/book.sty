% 枚举环境
\newcommand{\setenumtype}[1]{
	\ifstrequal{#1}{(1)}{%
		\renewcommand{\theenumi}{{\upshape\textcolor{main}{(\arabic{enumi})}}}
	}{}
	\ifstrequal{#1}{(i)}{%
		\renewcommand{\theenumi}{{\upshape\textcolor{main}{(\roman{enumi})}}}
	}{}
	\ifstrequal{#1}{1.}{%
		\renewcommand{\theenumi}{{\upshape\textcolor{main}{\arabic{enumi}.~}}}
	}{}
	\ifstrequal{#1}{A.}{%
		\renewcommand{\theenumi}{{\upshape\textcolor{main}{\Alph{enumi}.~}}}
	}{}
  \setcounter{enumi}{0}%
}
