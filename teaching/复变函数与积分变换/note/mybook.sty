\definecolor{tyellow}{HTML}{FFD05B}
\definecolor{tyellowlight}{HTML}{FFE39D}
\tikzset{>=latex}
\renewcommand{\maketitle}{
  \thispagestyle{empty}
  \begin{tikzpicture}[remember picture,overlay]
    \fill[tyellow] (current page.south west) rectangle (current page.north east);
    \coordinate (start) at ($(current page.east)!0.5!(current page.north east)+(1,-1)$);
    \coordinate (end)   at (current page.north west);
    \foreach \i in {0,0.01,...,1}
    {
      \coordinate (point) at ($(start)!\i!(end)$);
      \draw[tyellowlight]
        ($(point)+(310*\i:6)$)--
        ($(point)+(310*\i+120:6)$)--
        ($(point)+(310*\i+240:6)$)--
        ($(point)+(310*\i:6)$);
    }
    \coordinate (start) at (current page.south west);
    \coordinate (end)   at (current page.east);
    \foreach \i in {0,0.02,...,1}
    {
      \coordinate (point) at ($(start)!\i!(end)$);
      \draw[tyellowlight]
      ($(point)+(310*\i:10)$)--
      ($(point)+(310*\i+120:10)$)--
      ($(point)+(310*\i+240:10)$)--
      ($(point)+(310*\i:10)$);
    }
    % 书名
    \node (title)[
      shape=rectangle, 
      fill=main!70!black,
      outer sep=2em,
      inner sep=2em,
      minimum height=12em, 
      minimum width=\paperwidth, 
      align=flush right, 
      text=white,
      text width=0.8\paperwidth,
      anchor=north
    ] at ($(current page.center)!0.6!(current page.north)$)
    {
      \fontsize{4.5em}{4em}
      \fontfamily{lmss}
      \selectfont
      \ifcsname @title\endcsname\bfseries\@title\fi
    };
    % 作者名
    \node (author)[
      fill=main!90!black,
      inner sep=0.75em,
      align=flush right,
      text=white,
      anchor=east
    ] at ($(title.north east)-(0.125\paperwidth,0)$)
    {
      \fontsize{3em}{2.5em}
      \fontfamily{lmss}
      \selectfont
      \ifcsname @author\endcsname\@author\fi
    };
    % 作者名字位置
    \node[
      fill=main!90!black,
      inner sep=0.75em,
      align=flush left,
      anchor=west,
      xshift=-2mm
    ] at (author.east)
    {
      \fontsize{3em}{2.5em}
      \fontfamily{lmss}
      \selectfont
      \phantom{\ifcsname @author\endcsname\@author\fi}
    };
    % 副标题
    \node (subtitle)[
      text=black,
      align=flush right,
      anchor=north east
    ] at ($(title.south east)+(-0.14\paperwidth,.5)$)
    {
      \LARGE
      \fontfamily{lmss}
      \selectfont
      \ifcsname @subtitle\endcsname\@subtitle\fi
    };
    % 版次
    \node (subtitle)[
      text=black,
      align=flush right,
      anchor=north east
    ] at ($(title.south east)+(-0.14\paperwidth,-.5)$)
    {
      \Large
      \fontfamily{lmss}
      \selectfont
      \ifcsname @version\endcsname\@version\fi
    };
    % logo和出版信息
    \node [
      text=black
    ] at ($(current page.center)!0.9!(current page.south)$)
    {
      \includegraphics[height=3em]{../../../image/logo/hfut.png}
      \raisebox{1.1em}{
        \fontsize{1.5em}{1em}
        \selectfont
        \ifcsname @press\endcsname\@press\fi
      }
    };
  \end{tikzpicture}
}




