\usepackage[lmargin=1in,rmargin=1in,tmargin=1in,bmargin=1in]{geometry}
\usepackage[colorlinks]{hyperref}
\usepackage{amssymb, enumitem, fontawesome, xcolor}
\newcommand{\mainColor}{blue!90!black}
\newcommand{\urlColor}{magenta}
\hypersetup{urlcolor=\urlColor}
\setlength{\parindent}{0em}
\setlist[itemize,1]{label=$\diamond$}
\setlist[enumerate,1]{label=$\blacktriangleright$}
\setlist[enumerate,2]{label=$\bullet$, topsep=-1ex, itemsep=0ex, parsep=0ex, leftmargin=1em}
\renewcommand{\hrulefill}{\leavevmode\leaders\hrule height 0.2ex\hfill\kern\z@}

\newcommand{\cvtitle}[4]{
  \begin{minipage}[c]{\textwidth} \centering
  {\bfseries\huge\textcolor{\mainColor}{#1}}
  \par\vspace{2ex}#2\par%
  \ifx&#3&%
    \ifx&#4&\else{\textcolor{\urlColor}{\faGlobe~\url{#4}}}\fi%
  \else%
    \ifx&#4&\textcolor{\urlColor}{\faEnvelopeO~\url{#3}}%
    \else%
      \makebox[0.47\textwidth][r]{\textcolor{\urlColor}{\faEnvelopeO~\url{#3}}}~\textbullet~%
      \makebox[0.47\textwidth][l]{\textcolor{\urlColor}{\faGlobe~\url{#4}}}%
    \fi%
  \fi%
  \vspace{2ex}%
  \end{minipage}
}
\newcommand{\cvsection}[1]{{%
  \vspace{2ex}%
  \raggedright\strut{\Large\bfseries\textcolor{\mainColor}{#1}}\par%
  \raisebox{0.5ex}{\textcolor{\mainColor}{\rule{0.25\textwidth}{1.2ex}}}%
  \raisebox{1.5ex}{\textcolor{\mainColor}{\rule{0.75\textwidth}{0.2ex}}}\par\nobreak%
}}
\newcommand{\cvsubsection}[1]{{%
  \vspace{2ex}%
  \raggedright\strut{\large\bfseries\textcolor{\mainColor}{#1}}\hspace{2pt}%
  \textcolor{\mainColor}{\hrulefill}\hspace{0.5\textwidth}~\par\nobreak%
}}

\newcommand{\editem}[4]{%
  \item \textbf{#1}, \emph{#2}%
  \ifx&#3&\else\\#3\fi%
  \ifx&#4&\else\\\emph{#4}\fi
}
\newcommand{\csitem}[2]{\item #1, \emph{#2}}


